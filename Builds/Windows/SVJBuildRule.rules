<?xml version="1.0" encoding="utf-8"?>
<VisualStudioToolFile
	Name="SVG Rule"
	Version="8.00"
	>
	<Rules>
		<CustomBuildRule
			Name="Build Icon"
			DisplayName="Build Icon"
			CommandLine="mkdir =&quot;$(InputDir)\..\..\Icons\$(InputName)&quot;&#x0D;&#x0A;[InkscapeCMD] &quot;$(InputPath)&quot; [Width] [Height] --export-png=&quot;$(InputDir)\..\..\Icons\$(InputName)\$(InputName)Normal.png&quot;"
			Outputs="&quot;$(InputDir)\..\..\Icons\$(InputName)\$(InputName)Normal.png&quot;"
			FileExtensions="*.svg"
			ExecutionDescription="Executing tool..."
			>
			<Properties>
				<StringProperty
					Name="InkscapeCMD"
					DisplayName="Inkscape Executable"
					Category="Inkscape Executable"
					Description="Inkscape Executable"
					Switch="[value]"
					DefaultValue="&quot;C:\Program Files\Inkscape\inkscape.exe&quot;"
				/>
				<IntegerProperty
					Name="Width"
					DisplayName="Width"
					Category="Dimentions"
					Description="Width"
					Switch="-w [value]"
					DefaultValue="64"
				/>
				<IntegerProperty
					Name="Height"
					DisplayName="Height"
					Category="Dimentions"
					Description="Height"
					Switch="-h [value]"
					DefaultValue="64"
				/>
			</Properties>
		</CustomBuildRule>
	</Rules>
</VisualStudioToolFile>
